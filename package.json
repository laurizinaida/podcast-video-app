{
  "name": "podcast-video-app",
  "version": "1.0.0",
  "description": "智能化在线视频创作平台",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:wrangler": "kill-port 8788 3000 && npx wrangler pages dev --port 8788 --proxy 3000 --d1=DB -- pnpm --filter web dev",
