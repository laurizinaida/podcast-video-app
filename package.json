  },
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "kill-port": "^2.0.1",
    "turbo": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "packageManager": "pnpm@10.11.1",
  "dependencies": {
    "@auth/d1-adapter": "^1.10.0"
  }
}
